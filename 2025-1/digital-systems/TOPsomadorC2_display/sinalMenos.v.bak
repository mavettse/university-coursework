module sinalMenos(bitSinal, seg);
	input bitSinal;
	output [6:0] seg;
			
	assign seg[5:0] = 6'b111111;
	assign seg[6] = ~bitSinal;

	assign seg = {segg, segf, sege, segd, segc, segb, sega};		
	
endmodule